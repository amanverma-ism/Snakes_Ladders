<UserControl x:Class="Snakes_and_Ladders.Token"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Snakes_and_Ladders"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="tokenControl" Canvas.Left="{Binding MainCircleLeft, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="{Binding MainCircleTop, UpdateSourceTrigger=PropertyChanged}">
    <Grid>
        <Ellipse x:Name="MainCircle" Opacity="1" Stroke="{Binding Color}" Fill="{Binding Color}" Canvas.Left="{Binding MainCircleLeft, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="{Binding MainCircleTop, UpdateSourceTrigger=PropertyChanged}" Stretch="Uniform" Height="{Binding MainCircleHeight, UpdateSourceTrigger=PropertyChanged}" Width="{Binding MainCircleWidth, UpdateSourceTrigger=PropertyChanged}"></Ellipse>
    </Grid>
</UserControl>
