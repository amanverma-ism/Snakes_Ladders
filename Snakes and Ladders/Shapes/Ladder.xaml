<UserControl x:Class="Snakes_and_Ladders.Shapes.Ladder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Snakes_and_Ladders.Shapes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid">
        <Line x:Name="Line1" Stroke="Black" StrokeThickness="{Binding LineThickness, UpdateSourceTrigger=PropertyChanged}" Fill="Blue" >
        </Line>
        <Line x:Name="Line2" Stroke="Black" StrokeThickness="{Binding LineThickness, UpdateSourceTrigger=PropertyChanged}" Fill="Blue">
        </Line>
    </Grid>
</UserControl>
